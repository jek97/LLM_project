<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.mycompany.com/MyMission" xmlns="http://www.mycompany.com/MyMission" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xs:element name="mission" type="MissionType"/>
    
    <xs:complexType name="MissionType">
        <xs:sequence>
            <xs:element name="task" type="TaskType" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="TaskType">
        <xs:sequence>
            <xs:element name="description" type="DescriptionType"/>
            <xs:element ref="xsi:type(ActionType)" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="DescriptionType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="id" type="xs:ID"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    
    <xs:complexType name="ActionType">
        <xs:sequence>
            <xs:element name="type" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>

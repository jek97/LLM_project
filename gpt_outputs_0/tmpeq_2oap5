<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="http://example.com/mission" xmlns="http://example.com/mission">
    <element name="Mission">
        <complexType>
            <sequence>
                <element ref="MissionInformation" />
                <element ref="CompositeTaskInformation" />
                <element ref="Outcome" minOccurs="0" />
            </sequence>
        </complexType>
    </element>
    <element name="MissionInformation">
        <complexType>
            <sequence>
                <element name="MissionID" type="xsd:integer" />
                <element name="StartTime" type="xsd:dateTime" />
                <element name="EndTime" type="xsd:dateTime" />
            </sequence>
        </complexType>
    </element>
    <element name="CompositeTaskInformation">
        <complexType>
            <sequence>
                <element name="TaskID" type="xsd:integer" />
                <element name="TaskDescription" type="xsd:string" />
                <element ref="SubTasks" minOccurs="0" maxOccurs="unbounded" />
            </sequence>
        </complexType>
    </element>
    <element name="SubTasks">
        <complexType>
            <sequence>
                <element ref="Task" minOccurs="1" maxOccurs="unbounded" />
            </sequence>
        </complexType>
    </element>
    <element name="Task">
        <complexType>
            <sequence>
                <element name="TaskID" type="xsd:integer" />
                <element name="TaskType" type="xsd:string" />
                <element name="Location">
                    <complexType>
                        <sequence>
                            <element name="Latitude" type="xsd:float" />
                            <element name="Longitude" type="xsd:float" />
                        </sequence>
                    </complexType>
                </element>
            </sequence>
        </complexType>
    </element>
    <element name="Outcome">
        <complexType>
            <sequence>
                <element name="EstimatedDistance" type="xsd:string" />
                <element name="Status" type="xsd:string" />
            </sequence>
        </complexType>
    </element>
</xsd:schema>

<Mission xmlns="http://example.com/mission">
    <MissionInformation>
        <MissionID>1</MissionID>
        <StartTime>2023-04-01T09:00:00Z</StartTime>
        <EndTime>2023-04-01T17:00:00Z</EndTime>
    </MissionInformation>
    <CompositeTaskInformation>
        <TaskID>1</TaskID>
        <TaskDescription>Select 5 pine trees in a row to measure their diameter and take pictures (GeoJSON provided)</TaskDescription>
        <SubTasks>
            <Task>
                <TaskID>2</TaskID>
                <TaskType>DriveToLocation</TaskType>
                <Location>
                    <Latitude>37.36635678715399</Latitude>
                    <Longitude>-120.42299259529793</Longitude>
                </Location>
            </Task>
            <Task>
                <TaskID>3</TaskID>
                <TaskType>MeasureDiameter</TaskType>
                <Location>
                    <Latitude>37.36635678715399</Latitude>
                    <Longitude>-120.42299259529793</Longitude>
                </Location>
            </Task>
            <!-- Repeat the following tasks for the next 4 trees -->
            <Task>
                <TaskID>4</TaskID>
                <TaskType>DriveToLocation</TaskType>
                <Location>
                    <Latitude>37.36635678715399</Latitude>
                    <Longitude>-120.42299259529793</Longitude>
                </Location>
            </Task>
            <Task>
                <TaskID>5</TaskID>
                <TaskType>TakePicture</TaskType>
                <Location>
                    <Latitude>37.36635678715399</Latitude>
                    <Longitude>-120.42299259529793</Longitude>
                </Location>
            </Task>
        </SubTasks>
    </CompositeTaskInformation>
    <Outcome>
        <EstimatedDistance>10 km</EstimatedDistance>
        <Status>Completed</Status>
    </Outcome>
</Mission>

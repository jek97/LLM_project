<?xml version="1.0" encoding="UTF-8"?>
<roboticTaskRepresentation xmlns:rt="http://robotic-task-representation.org/schema/mission_plan.xsd"
                              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
               elementFormDefault="qualified">
        <xs:element name="CompositeTaskInformation">
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="TaskDescription" type="xs:string"/>
                    <xs:element ref="Outcome"/>
                </xs:sequence>
            </xs:complexType>
        </xs:element>
        
        <xs:element name="Outcome">
            <xs:complexType>
                <xs:sequence>
                    <xs:element ref="DrivingToTree"/>
                    <xs:element ref="Action"/>
                </xs:sequence>
            </xs:complexType>
        </xs:element>
        
        <xs:element name="DrivingToTree">
            <xs:complexType>
                <xs:simpleContent>
                    <xs:extension base="xs:string">
                        <xs:attribute name="location" type="xs:string"/>
                    </xs:extension>
                </xs:simpleContent>
            </xs:complexType>
        </xs:element>
        
        <xs:element name="Action">
            <xs:complexType>
                <xs:simpleContent>
                    <xs:extension base="xs:string">
                        <xs:attribute name="type" type="xs:string"/>
                        <xs:attribute name="treeType" type="xs:string"/>
                    </xs:extension>
                </xs:simpleContent>
            </xs:complexType>
        </xs:element>
    </xs:schema>
</xs:schema>

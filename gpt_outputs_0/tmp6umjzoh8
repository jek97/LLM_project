<?xml version="1.0" encoding="UTF-8"?>
<RoboticMissionPlan xmlns="http://example.com/robotics/missionplan">
    <Mission>
        <Version>1.0</Version>
        <StartLocation>
            <Latitude>...</Latitude>
            <Longitude>...</Longitude>
        </StartLocation>
        <Tasks>
            <CompositeTaskInformation>
                <Question>From the starting point, go to the middle of the field and take a picture of a tree. If its average temperature is below 33 C, take a CO2 sample. After, go to another random point 5 trees down and do the same thing.</Question>
                <TaskList>
                    <DriveToLocation>
                        <Destination>
                            <Latitude>...</Latitude>
                            <Longitude>...</Longitude>
                        </Destination>
                    </DriveToLocation>
                    <TakePicture>
                        <TreeReference>
                            <TreeID>1</TreeID>
                            <GPSLocation>
                                <Latitude>...</Latitude>
                                <Longitude>...</Longitude>
                            </GPSLocation>
                        </TreeReference>
                    </TakePicture>
                    <MeasureTemperature>
                        <TreeReference>
                            <TreeID>1</TreeID>
                            <GPSLocation>
                                <Latitude>...</Latitude>
                                <Longitude>...</Longitude>
                            </GPSLocation>
                        </TreeReference>
                    </MeasureTemperature>
                    <Condition>
                        <ComparisonType>LessThan</ComparisonType>
                        <Value>33.0</Value>
                        <VariableName>AverageTemperature</VariableName>
                    </Condition>
                    <IfThenElse>
                        <If>
                            <Reference to="#MeasureTemperature"/>
                        </If>
                        <Then>
                            <TakeCO2Sample>
                                <TreeReference>
                                    <TreeID>1</TreeID>
                                    <GPSLocation>
                                        <Latitude>...</Latitude>
                                        <Longitude>...</Longitude>
                                    </GPSLocation>
                                </TreeReference>
                            </TakeCO2Sample>
                        </Then>
                        <Else>
                            <DriveToLocation>
                                <Destination>
                                    <Latitude>...</Latitude>
                                    <Longitude>...</Longitude>
                                </Destination>
                            </DriveToLocation>
                        </Else>
                    </IfThenElse>
                    <TakePicture>
                                <TreeReference>
                                    <TreeID>6</TreeID>
                                    <GPSLocation>
                                        <Latitude>...</Latitude>
                                        <Longitude>...</Longitude>
                                    </GPSLocation>
                                </TreeReference>
                            </TakePicture>
                    <MeasureTemperature>
                                <TreeReference>
                                    <TreeID>6</TreeID>
                                    <GPSLocation>
                                        <Latitude>...</Latitude>
                                        <Longitude>...</Longitude>
                                    </GPSLocation>
                                </TreeReference>
                            </MeasureTemperature>
                </TaskList>
            </CompositeTaskInformation>
        </Tasks>
        <Outcome>
            ... (Comment the total estimated haversine distance traveled from start to end)
        </Outcome>
    </Mission>
</RoboticMissionPlan>

<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="MissionPlan">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="TaskList" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:choice>
                                <xs:element ref="DriveToWaypoint"/>
                                <xs:element ref="CaptureImage"/>
                            </xs:choice>
                        </xs:sequence>
                        <xs:attribute name="TaskID" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="DriveToWaypoint">
        <xs:complexType>
            <xs:attribute name="TaskID" type="xs:string" use="required"/>
            <xs:attribute name="WaypointID" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="CaptureImage">
        <xs:complexType>
            <xs:attribute name="TaskID" type="xs:string" use="required"/>
            <xs:attribute name="TreeID" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>
</xs:schema>

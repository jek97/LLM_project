<MissionPlan>
  <TaskList>
    <Task id="1">
      <Name>Initial Tree Assessment</Name>
      <Description>Take a picture of the first tree.</Description>
      <Action>
        <Type>ImageCapture</Type>
        <Target>Tree 1</Target>
      </Action>
    </Task>
    <Task id="2">
      <Name>Read Tree 1</Name>
      <Description>If the reading is low, take a co2 sample. otherwise, take a temperature reading.</Description>
      <Action>
        <Type>SensorReading</Type>
        <Sensor>Temperature</Sensor>
        <Target>Tree 1</Target>
      </Action>
    </Task>
    <Task id="3">
      <Name>Measure Tree 2</Name>
      <Description>Measure another tree, a different one by taking a picture.</Description>
      <Action>
        <Type>ImageCapture</Type>
        <Target>Tree 2</Target>
      </Action>
    </Task>
    <Task id="4">
      <Name>Read Tree 2</Name>
      <Description>If the reading is low, sample co2. if that reading is low, sample co2 again to confirm.</Description>
      <Action>
        <Type>SensorReading</Type>
        <Sensor>CO2</Sensor>
        <Target>Tree 2</Target>
      </Action>
    </Task>
    <Task id="5">
      <Name>Drive to Tree 3</Name>
      <Description>If still low, continue driving to another tree and take another co2 sample.</Description>
      <Action>
        <Type>Drive</Type>
        <Target>Tree 3</Target>
      </Action>
    </Task>
    <Task id="6">
      <Name>Final Task</Name>
      <Description>Finally, go to end.</Description>
      <Action>
        <Type>Drive</Type>
        <Target>End</Target>
      </Action>
    </Task>
  </TaskList>
</MissionPlan>

<?xml version="1.0" encoding="UTF-8"?>
<RoboticMissionPlan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="mission_plan_schema.xsd">
  <Header>
    <Title>Orchard Photo Mission</Title>
    <Description>Take pictures of the northernmost tree, middle tree(s) and eastern trees.</Description>
  </Header>
  <MissionBody>
    <CompositeTaskInformation id="Task1">
      <TaskDescription>Start at location (0,0). Move to the northernmost tree. Take a picture of the northernmost tree.</TaskDescription>
      <Tasks>
        <DriveToGPSLocation>
          <FromGPSLocation x="0" y="0"/>
          <DestinationGPSLocation>
            <Longitude>[Northernmost tree's longitude from GeoJSON file]</Longitude>
            <Latitude>[Northernmost tree's latitude from GeoJSON file]</Latitude>
          </DestinationGPSLocation>
        </DriveToGPSLocation>
        <TakePicture/>
      </Tasks>
    </CompositeTaskInformation>
    <CompositeTaskInformation id="Task2">
      <TaskDescription>Move to the middle of the orchard. Take a picture of two trees next to each other.</TaskDescription>
      <Tasks>
        <DriveToGPSLocation>
          <FromGPSLocation>
            <Longitude>[Northernmost tree's longitude from GeoJSON file]</Longitude>
            <Latitude>[Northernmost tree's latitude from GeoJSON file]</Latitude>
          </FromGPSLocation>
          <DestinationGPSLocation>
            <Longitude>[Middle of the orchard longitude]</Longitude>
            <Latitude>[Middle of the orchard latitude]</Latitude>
          </DestinationGPSLocation>
        </DriveToGPSLocation>
        <FindNearbyTreesNumber="2">
          <DistanceThreshold>1</DistanceThreshold> <!-- 1 meter -->
        </FindNearbyTrees>
        <TakePicture/>
      </Tasks>
    </CompositeTaskInformation>
    <CompositeTaskInformation id="Task3">
      <TaskDescription>Move to the middle of the eastern end. Take a picture of two trees next to each other.</TaskDescription>
      <Tasks>
        <DriveToGPSLocation>
          <FromGPSLocation>
            <Longitude>[Middle of the orchard longitude]</Longitude>
            <Latitude>[Middle of the orchard latitude]</Latitude>
          </FromGPSLocation>
          <DestinationGPSLocation>
            <Longitude>[Eastern end middle longitude]</Longitude>
            <Latitude>[Eastern end middle latitude]</Latitude>
          </DestinationGPSLocation>
        </DriveToGPSLocation>
        <FindNearbyTreesNumber="2">
          <DistanceThreshold>1</DistanceThreshold> <!-- 1 meter -->
        </FindNearbyTrees>
        <TakePicture/>
      </Tasks>
    </CompositeTaskInformation>
  </MissionBody>
</RoboticMissionPlan>

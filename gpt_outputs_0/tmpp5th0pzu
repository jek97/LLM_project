                            </xs:extension>
                        </xs:simpleContent>
                    </xs:complexType>
                </xs:element>
                <xs:element name="Tasks">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Task" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="TaskID" type="xs:string"/>
                                        <xs:element name="Action" type="xs:string"/>
                                        <xs:choice minOccurs="0">
                                            <xs:element name="Parameters">
                                                <xs:complexType mixed="true">
                                                    <xs:attribute name="latitude" type="xs:float" use="required"/>
                                                    <xs:attribute name="longitude" type="xs:float" use="required"/>
                                                </xs:complexType>
                                            </xs:element>
                                        </xs:choice>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="EndLocation">
                    <xs:complexType>
                        <xs:simpleContent>
                            <xs:extension base="xs:string">
                                <xs:attribute name="latitude" type="xs:float" use="required"/>
                                <xs:attribute name="longitude" type="xs:float" use="required"/>
                            </xs:extension>
                        </xs:simpleContent>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

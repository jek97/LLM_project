            <sequence>
                <element ref="compositeTask"/>
                <element ref="compositeTask"/>
                <!-- Add more compositeTask elements as needed -->
            </sequence>
        </complexType>
    </element>
    <element name="compositeTask">
        <complexType>
            <sequence>
                <element name="taskInfo">
                    <complexType>
                        <sequence>
                            <element name="name" type="string"/>
                            <element name="distance_unit">
                                <simpleType>
                                    <restriction base="string">
                                        <enumeration value="feet"/>
                                        <enumeration value="meter"/>
                                    </restriction>
                                </simpleType>
                            </element>
                            <element name="distance" type="double"/>
                        </sequence>
                    </complexType>
                </element>
                <element ref="compositeTaskInformation"/>
            </sequence>
        </complexType>
    </element>
    <element name="compositeTaskInformation">
        <complexType>
            <sequence>
                <element name="taskDescription" type="string"/>
                <element name="outcome">
                    <complexType>
                        <sequence>
                            <element name="distanceTraveled">
                                <simpleType>
                                    <restriction base="double">
                                        <maxInclusive value="10000"/>
                                    </restriction>
                                </simpleType>
                            </element>
                        </sequence>
                    </complexType>
                </element>
            </sequence>
        </complexType>
    </element>
</xsd:schema>

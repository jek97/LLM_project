<?xml version="1.0" encoding="UTF-8"?>
<MissionPlan>
  <Task id="1">
    <Description>Take a picture of the first tree.</Description>
    <Action type="capture_image"/>
  </Task>
  <Task id="2">
    <Description>If the reading is low, take a co2 sample.</Description>
    <Condition>reading_low</Condition>
    <Action type="capture_co2_sample"/>
  </Task>
  <Task id="3">
    <Description>Otherwise, take a temperature reading.</Description>
    <Condition>not reading_low</Condition>
    <Action type="capture_temperature_reading"/>
  </Task>
  <Task id="4">
    <Description>Measure another tree, a different one by taking a picture.</Description>
    <Action type="capture_image"/>
  </Task>
    <Task id="5">
    <Description>If the reading is low, sample co2. if that reading is low, sample co2 again to confirm.</Description>
    <Condition>reading_low</Condition>
    <Action type="capture_co2_sample"/>
  </Task>
  <Task id="6">
    <Description>if still low, continue driving to another tree and take another co2 sample.</Description>
    <Action type="capture_co2_sample"/>
  </Task>
  <Task id="7">
    <Description>Finally, go to end.</Description>
    <Action type="navigate_to_end"/>
  </Task>
</MissionPlan>

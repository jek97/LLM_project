    <task name="Picture Northernmost Tree">
      <coordinates>Northernmost tree coordinates</coordinates>
      <image_format>jpg</image_format>
    </task>
    
    <task name="Drive to Middle of Orchard">
      <action>Drive straight</action>
    </task>
    
    <task name="Capture Image">
      <coordinates>Middle of the orchard coordinates</coordinates>
      <image_format>jpg</image_format>
    </task>
    
    <task name="Drive to Middle of Eastern End">
      <action>Turn left and drive straight</action>
    </task>
    
    <task name="Capture Images of Two Trees Next to Each Other">
      <coordinates>Eastern end tree coordinates</coordinates>
      <image_format>jpg</image_format>
    </task>
  </activity>
  
  <autonomous mode="on"/>
  
  <end/>

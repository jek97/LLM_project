<?xml version="1.0" encoding="UTF-8"?>
<RoboticMissionPlan xmlns="http://example.com/robotics/missionplan" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://example.com/robotics/missionplan http://example.com/robotics/missionplan/schemas/RoboticMissionPlan_v1_0.xsd">
    <Mission>
        <Version>1.0</Version>
        <StartLocation>
            <Latitude>...</Latitude>
            <Longitude>...</Longitude>
        </StartLocation>
        <Tasks>
            <CompositeTaskInformation>
                <Question>From the starting point, drive to a random tree, take a picture of it, and measure its temperature. If the average temperature is below 33 C, also take a CO2 sample.</Question>
                <TaskList>
                    <DriveToLocation xsi:type="RandomTree">
                        <GPSLocation>
                            <Latitude>...</Latitude>
                            <Longitude>...</Longitude>
                        </GPSLocation>
                    </DriveToLocation>
                    <TakePicture>
                        <TreeReference>
                            <GeoJSONReference xsi:type="Point">
                                <Coordinates>...</Coordinates>
                            </GeoJSONReference>
                        </TreeReference>
                    </TakePicture>
                    <MeasureTemperature>
                        <TreeReference>
                            <GeoJSONReference xsi:type="Point">
                                <Coordinates>...</Coordinates>
                            </GeoJSONReference>
                        </TreeReference>
                    </MeasureTemperature>
                    <Condition>
                        <ComparisonType>LessThan</ComparisonType>
                        <Value>33.0</Value>
                        <VariableName>AverageTemperature</VariableName>
                    </Condition>
                    <IfThenElse>
                        <If>
                            <Reference to="#MeasureTemperature"/>
                        </If>
                        <Then>
                            <TakeCO2Sample>
                                <TreeReference>
                                    <GeoJSONReference xsi:type="Point">
                                        <Coordinates>...</Coordinates>
                                    </GeoJSONReference>
                                </TreeReference>
                            </TakeCO2Sample>
                        </Then>
                        <!-- Add an Else task if necessary -->
                    </IfThenElse>
                </TaskList>
            </CompositeTaskInformation>
            <!-- More CompositeTaskInformation elements here if necessary -->
        </Tasks>
        <Outcome>The estimated distance traveled from start to end is approximately [distance] meters.</Outcome>
    </Mission>
</RoboticMissionPlan>

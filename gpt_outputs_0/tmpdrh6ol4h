<MissionPlan>
  <Task id="1">
    <Description>Take a picture of the first tree.</Description>
    <Action type="image">Take a picture.</Action>
  </Task>
  <Task id="2">
    <Description>If the reading is low, take a co2 sample.</Description>
    <Action type="measurement">
      <MeasurementType>CO2</MeasurementType>
      <Condition>Low Reading</Condition>
    </Action>
  </Task>
  <Task id="3">
    <Description>Otherwise, take a temperature reading.</Description>
    <Action type="measurement">
      <MeasurementType>Temperature</MeasurementType>
      <Condition>Not Low Reading</Condition>
    </Action>
  </Task>
  <Task id="4">
    <Description>Measure another tree, a different one.</Description>
    <Action type="image">Take a picture of a different tree.</Action>
  </Task>
  <Task id="5">
    <Description>If the reading is low, sample co2.</Description>
    <Action type="measurement">
      <MeasurementType>CO2</MeasurementType>
      <Condition>Low Reading</Condition>
    </Action>
  </Task>
  <Task id="6">
    <Description>If it's low, sample co2 again to confirm.</Description>
    <Action type="measurement">
      <MeasurementType>CO2</MeasurementType>
      <Condition>Low Reading</Condition>
    </Action>
  </Task>
  <Task id="7">
    <Description>If still low, continue driving to another tree and take another co2 sample.</Description>
    <Action type="drive">Continue driving to another tree.</Action>
    <Action type="measurement">
      <MeasurementType>CO2</MeasurementType>
    </Action>
  </Task>
  <Task id="8">
    <Description>Finally, go to end.</Description>
    <Action type="drive">Drive to the end location.</Action>
  </Task>
</MissionPlan>

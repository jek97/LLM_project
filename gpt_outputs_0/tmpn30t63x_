<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://example.com/missionplan"
           xmlns="http://example.com/missionplan"
           elementFormDefault="qualified">

  <xs:element name="mission">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="compositeTaskInformation"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="compositeTaskInformation">
    <xs:complexType>
      <xs:sequence>
        <xs:element type="xs:string" name="taskID"/>
        <xs:element type="xs:string" name="taskDescription"/>
        <xs:element type="xs:dateTime" name="startTime"/>
        <xs:element type="xs:dateTime" name="endTime"/>
        <xs:element ref="routePoints"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="routePoints">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="routePoint" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="routePoint">
    <xs:complexType>
      <xs:sequence>
        <xs:element type="xs:double" name="latitude"/>
        <xs:element type="xs:double" name="longitude"/>
        <xs:element type="xs:int" name="altitude"/>
        <xs:element type="xs:string" name="taskType"/>
        <xs:element type="xs:int" name="distanceLimit"/>
      </xs:sequence>
      <xs:attribute name="id" type="xs:ID" use="required"/>
    </xs:complexType>
  </xs:element>

</xs:schema>

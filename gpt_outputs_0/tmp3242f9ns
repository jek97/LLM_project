<?xml version="1.0" encoding="UTF-8"?>
<MissionPlan xmlns="http://example.com/missionplan"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema"
             xmlns:geojson="http://geojson.org">
    <xsd:schema xmlns:geojson="http://geojson.org">
        <geojson:PointRefType xmlns:geojson="http://geojson.org">xs:string</geojson:PointRefType>
        
        <xsd:complexType name="CompositeTaskInformationType">
            <xsd:sequence>
                <xsd:element name="TaskDescription" type="xs:string"/>
                <xsd:element name="Tasks" type="TasksType"/>
            </xsd:sequence>
        </xsd:complexType>
        
        <xsd:complexType name="TasksType">
            <xsd:sequence>
                <xsd:element maxOccurs="unbounded" name="Task">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="DrivingToPoint" type="DrivingToPointType"/>
                            <xsd:element name="SampleAction" type="SampleActionType"/>
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
            </xsd:sequence>
        </xsd:complexType>
        
        <xsd:complexType name="DrivingToPointType">
            <xsd:sequence>
                <xsd:element name="PointRef" type="geojson:PointRefType"/>
            </xsd:sequence>
        </xsd:complexType>
        
        <xsd:complexType name="SampleActionType">
            <xsd:sequence>
                <xsd:element name="Reward" type="xs:string"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:schema>
</MissionPlan>

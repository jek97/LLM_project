<mission>
  <name>Picture four trees</name>
  <description>Take a picture of the tree at each cardinal direction: north, east, south, and west.</description>
  
  <!-- Define the initial position -->
  <initialPosition>
    <latitude>37.36635640370881</latitude>
    <longitude>-120.42304700637999</longitude>
    <altitude>0</altitude>
  </initialPosition>
  
  <!-- Define the positions of the trees -->
  <trees>
    <tree id="north" latitude="37.366289085563826" longitude="-120.4230246791031" altitude="0"/>
    <tree id="east" latitude="37.36634636896467" longitude="-120.42301417901265" altitude="0"/>
    <tree id="south" latitude="37.36626996761184" longitude="-120.42301417901265" altitude="0"/>
    <tree id="west" latitude="37.36635678715399" longitude="-120.42302669537153" altitude="0"/>
  </trees>
  
  <!-- Define the mission sequence -->
  <sequence>
    <task type="take_picture">
      <target idRef="north"/>
    </task>
    <task type="take_picture">
      <target idRef="east"/>
    </task>
    <task type="take_picture">
      <target idRef="south"/>
    </task>
    <task type="take_picture">
      <target idRef="west"/>
    </task>
  </sequence>
  
  <!-- Define the constraints for the mission -->
  <constraints>
    <!-- The robot must maintain a safe distance from the trees -->
    <constraint type="distance" minDistance="100" maxDistance="200"/>
    <!-- The robot must not enter any prohibited areas -->
    <constraint type="prohibited_area"/>
  </constraints>
  
</mission>

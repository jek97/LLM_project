<?xml version="1.0" encoding="UTF-8"?>
<MissionPlan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="path/to/mission_plan.xsd">
    <CompositeTaskInformation TaskDescription="At the first tree, take a picture. If that picture shows low temperature, take a temperature reading. If that reading is also low, take a CO2 sample. If that reading is also low, drive to a far away tree and repeat the process. If the very first reading isn't low, drive to end">
        <Task>
            <Action>DriveToTree</Action>
            <TargetTreeIndex>0</TargetTreeIndex>
        </Task>
        <Task>
            <Action>TakePicture</Action>
        </Task>
        <ConditionalTask>
            <Condition>TemperatureIsLow</Condition>
            <TrueBranch>
                <Task>
                    <Action>MeasureTemperature</Action>
                </Task>
                <ConditionalTask>
                    <Condition>TemperatureIsLow</Condition>
                    <TrueBranch>
                        <Task>
                            <Action>TakeCO2Sample</Action>
                        </Task>
                    </TrueBranch>
                    <FalseBranch>
                        <Task>
                            <Action>DriveToEnd</Action>
                        </Task>
                    </FalseBranch>
                </ConditionalTask>
            </TrueBranch>
            <FalseBranch>
                <Task>
                    <Action>DriveToFarAwayTree</Action>
                </Task>
                <Task>
                    <Action>TakePicture</Action>
                </Task>
                <ConditionalTask>
                    <Condition>TemperatureIsLow</Condition>
                    <TrueBranch>
                        <Task>
                            <Action>MeasureTemperature</Action>
                        </Task>
                        <ConditionalTask>
                            <Condition>TemperatureIsLow</Condition>
                            <TrueBranch>
                                <Task>
                                    <Action>TakeCO2Sample</Action>
                                </Task>
                            </TrueBranch>
                            <FalseBranch>
                                <Task>
                                    <Action>DriveToEnd</Action>
                                </Task>
                            </FalseBranch>
                        </ConditionalTask>
                    </TrueBranch>
                </ConditionalTask>
            </FalseBranch>
        </ConditionalTask>
    </CompositeTaskInformation>
</MissionPlan>

        <Tasks>
            <Task id="T2">
                <DriveToLocation x="{longitude}" y="{latitude}"/>
                <Action type="TakePicture">
                    <TreeType>{tree_type}</TreeType>
                </Action>
            </Task>
        </Tasks>
        <!-- End of repeating block -->
    </CompositeTaskInformation>
    <Outcome>The robot successfully visited multiple trees within a 100-meter radius and took pictures of each tree.</Outcome>

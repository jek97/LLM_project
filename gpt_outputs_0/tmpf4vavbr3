        </Task>
        <!-- Repeat DriveToLocation and TakePicture tasks for each point in the GeoJSON file within 100 meters of the previous target point -->
        <Task>
            <Type>DriveToLocation</Type>
            <Coordinates><Latitude>Target Point Latitude from GeoJSON file</Latitude><Longitude>Target Point Longitude from GeoJSON file</Longitude></Coordinates>
            <TargetPoint>Next Target Point Coordinates from GeoJSON file</TargetPoint>
        </Task>
        <!-- ... -->
        <Task>
            <Type>TakePicture</Type>

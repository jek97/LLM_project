<?xml version="1.0" encoding="UTF-8"?>
<RoboticMission xmlns="http://example.com/missionplan"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://example.com/missionplan http://example.com/missionplan.xsd">
    <MissionInfo>
        <MissionName>Temperature and CO2 Monitoring</MissionName>
        <StartTime>YYYY-MM-DDThh:mm:ssZ</StartTime>
    </MissionInfo>
    <CompositeTaskInformation>
        <TaskDescription>Generate a mission to inspect and collect data from trees for temperature and CO2 levels.</TaskDescription>
        <TaskSequence>
            <!-- Drive to starting location -->
            <Task>
                <TaskName>Drive to starting location</TaskName>
                <Action>Drive</Action>
            </Task>
            <!-- Take a picture at the first tree and check temperature -->
            <Task>
                <TaskName>Inspect Tree-0 for Temperature and CO2 Levels</TaskName>
                <Action>Camera</Action>
                <Location ref="#Tree-0" />
            </Task>
            <Task>
                <TaskName>Check temperature at Tree-0</TaskName>
                <Action>Thermometer</Action>
                <Location ref="#Tree-0" />
            </Task>
            <Task>
                <TaskName>Check CO2 level at Tree-0</TaskName>
                <Action>CO2Sensor</Action>
                <Location ref="#Tree-0" />
            </Task>
            <!-- If the temperature and CO2 levels are low, repeat the following tasks -->
            <Conditional TaskRef="#Loop">
                <Condition>
                    <LowTemperature ref="#Tree-0"/>
                    <LowCO2 ref="#Tree-0"/>
                </Condition>
                <TaskRef>#Loop</TaskRef>
            </Conditional>
            <!-- If the temperature and CO2 levels are not low at Tree-0, move to end -->
            <Conditional TaskRef="#End">
                <NotCondition>
                    <LowTemperature ref="#Tree-0"/>
                    <LowCO2 ref="#Tree-0"/>
                </NotCondition>
                <TaskRef>#End</TaskRef>
            </Conditional>
            <!-- Loop to inspect multiple trees -->
            <Loop>
                <Task>
                    <TaskName>Drive to current tree</TaskName>
                    <Action>Drive</Action>
                </Task>
                <Task>
                    <TaskName>Take a picture at current tree</TaskName>
                    <Action>Camera</Action>
                    <Location ref="currentTree"/>
                </Task>
                <!-- ... -->
            </Loop>
        </TaskSequence>
    </CompositeTaskInformation>
    <!-- Provide total estimated distance in Outcome for logging purposes -->
    <Outcome>The robot will travel a considerable distance to inspect and collect data from multiple trees.</Outcome>
</RoboticMission>

<?xml version="1.0"?>
<mission>
    <name>Tree and CO2 Sample Mission</name>
    <description>A mission to take pictures of trees and collect CO2 samples.</description>
    
    <sequence>
        <!-- Start at the starting point -->
        <step id="1">
            <name>Start at starting point</name>
        </step>
        
        <step id="2">
            <name>Go to middle of field</name>
        </step>
        
        <decision id="3" condition="average temperature is below 33 C">
            <action id="4">
                <name>Take a picture of a tree</name>
            </action>
            
            <action id="5">
                <name>Collect CO2 sample</name>
            </action>
        </decision>
        
        <!-- Move to another random point -->
        <step id="6">
            <name>Go to a random point 5 trees down</name>
        </step>
        
        <step id="7">
            <name>Repeat steps 2-4 if needed</name>
        </step>
    </sequence>
    
    <environment>
        <sensor id="1" name="Temperature Sensor">
            <reading name="average temperature">32.5</reading>
        </sensor>
        
        <sensor id="2" name="CO2 Sensor">
            <!-- CO2 level can be represented as a percentage or another unit of measurement -->
            <reading name="CO2 level">0.08</reading>
        </sensor>
    </environment>
    
    <resources>
        <camera id="1">
            <capability name="Take picture"></capability>
        </camera>
        
        <sensor id="3" name="Temperature Sensor">
            <capability name="Read average temperature"></capability>
        </sensor>
        
        <sensor id="4" name="CO2 Sensor">
